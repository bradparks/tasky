{
  "name": "tasky",
  "version": "1.0.10",
  "engines": [
    "node = 0.10.34"
  ],
  "description": "A reboot of cozy-todos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsilvestre/tasky.git"
  },
  "main": "server.js",
  "dependencies": {
    "americano": "0.4.2",
    "async": "1.4.2",
    "cozydb": "0.1.1",
    "debug": "2.2.0",
    "errorhandler": "1.4.2",
    "invariant": "2.1.1"
  },
  "devDependencies": {
    "eslint-config-airbnb": "0.0.8",
    "eslint-plugin-react": "3.3.2",
    "immutable": "3.7.5",
    "jade": "1.11.0",
    "mocha": "2.3.3",
    "moment": "2.10.6",
    "nib": "1.1.0",
    "node-polyglot": "0.4.3",
    "nodemon": "1.7.1",
    "react": "0.13.3",
    "react-redux": "2.1.2",
    "redux": "3.0.2",
    "redux-devtools": "2.1.5",
    "redux-logger": "1.0.6",
    "redux-thunk": "0.1.0",
    "request-json": "0.5.3",
    "reselect": "1.0.0",
    "should": "7.1.0",
    "sinon": "1.17.1",
    "stylus": "0.52.4",
    "superagent": "1.4.0",
    "uglify-js": "2.4.24",
    "underscore": "1.8.3",
    "watchify": "3.4.0"
  },
  "scripts": {
    "start": "node build/server.js",
    "dev": "DEBUG=app:* npm run watch:server & npm run watch:client",
    "lint": "node_modules/.bin/eslint server.js server/** client/src/**",
    "test": "node_modules/.bin/mocha --compilers js:babel/register test/*/**/*.js",
    "test:watch:server": "node_modules/.bin/mocha --compilers js:babel/register --bail --watch test/server/**/*.js",
    "postinstall": "chmod u+x scripts/*",
    "prepare-build": "mkdir -p build/client/public/styles && mkdir -p build/client/public/scripts",
    "build:js:client": "./scripts/build-js-client",
    "build:js:server": "./scripts/build-js-server",
    "build:template": "./scripts/build-template",
    "build:css": "./scripts/build-css",
    "build:assets": "cp -R client/assets/* build/client/public",
    "build": "npm run prepare-build && NODE_ENV=production npm run build:js:client && npm run build:js:server && npm run build:template && npm run build:css && npm run build:assets",
    "prepare-watch": "mkdir -p client/public/styles && mkdir -p client/public/scripts; npm run build:js:vendors; npm run build:assets:dev",
    "build:js:vendors": "./scripts/build-vendors-dev",
    "build:assets:dev": "cp -R client/assets/* client/public",
    "watch:js": "./scripts/watch-js",
    "watch:css": "./scripts/watch-css",
    "watch:client": "npm run prepare-watch; npm run watch:js & npm run watch:css",
    "watch:server": "node_modules/.bin/nodemon --ignore client/ --ignore tests/ --exec npm run compile:server",
    "compile:server": "node_modules/.bin/babel-node server.js"
  },
  "cozy-permissions": {
    "Tasky": {
      "description": "Create, edit, organize all your tasks."
    },
    "FavoriteTag": {
      "description": "Manage your favorite tags."
    },
    "CozyInstance": {
      "description": "This information is needed to localize the application in your language."
    }
  },
  "cozy-displayName": "Tasky",
  "icon-path": "build/client/public/icons/main_icon.svg",
  "cozy-color": "#3BDA6C"
}
