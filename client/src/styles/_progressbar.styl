#progressbar
    position relative
    z-index 10
    height 5px
    width 100%
    margin 0
    background green + 50%

    &> div
        position absolute
        z-index 100
        height 5px
        top 0
        left 0
        background green - 10%

    &>p
        position absolute
        top 0
        left 0
        z-index 150
        width 100%
        height 5px
        font-size 0
        margin 0
        padding 0
        text-align center
        line-height 33px

    &.expanded
        height 30px

        &> div
        &>p
            height 30px
        &>p
            font-size 18px
